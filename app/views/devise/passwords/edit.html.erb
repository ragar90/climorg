<div class = "devise-modal-form">
	<%= image_tag "user.png", class: "login-avatar"%>
	<%= form_for(curren, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, id: "edit-pasword-form" }) do |f| %>
	  <%= f.hidden_field :reset_password_token %>
	  <div>
	    <%= f.password_field :password, :autofocus => true, placeholder: "New password" %>
	  </div>
	  <div>
	    <%= f.password_field :password_confirmation, placeholder: "Confirm new password" %>
	  </div>
	<% end %>
</div>