<% ordinal = f.object.ordinal.nil? ? ordinal : f.object.ordinal%>
<div class = "question-fields"> 
  <%= f.hidden_field :dimension_id %>
  <div class="form-group">
    <%= f.label :ordinal,"Pregunta #" , :class => 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.number_field :ordinal, :class => 'form-control', min: 1, value: ordinal  %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :description, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :description, :class => 'form-control' %>
    </div>
  </div>
  <div class = "form-group">
    <div class = "col-sm-12">
      <%= f.hidden_field :_destroy %>
      <%= link_to '#', :class=> "remove_fields btn btn-danger pull-right"  do%>
        <span class="glyphicon glyphicon-trash"></span> Eliminar
      <% end %>
    </div>
  </div>
</div>