<div class="form-group">
  <%= f.label :description, :class => 'col-sm-2 control-label' %>
  <div class="col-sm-10">
    <%= f.text_field :description, :class => 'form-control' %>
  </div>
</div>

<div class="form-group">
  <%= f.label :dimension_id, :class => 'col-sm-2 control-label' %>
  <div class="col-sm-10">
    <%=f.collection_select :dimension_id, Dimension.all, :id, :camelize_name, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <div class="col-sm-offset-2 col-sm-10">
    <div class="checkbox">
      <%= f.label :is_default do %>
        <%= f.check_box :is_default %> Default
      <% end %>
    </div>
  </div>
</div>