<%- model_class = Research -%>
<%= render "/shared/gchart_load" %>
<div class="row">
  <div class="col-md-11">
    <div class="page-header">
      <h1>Estudios a <%=current_organization.name.titleize%></h1>
      <%= link_to "Nuevo Estudio", new_research_path, :class => 'btn btn-primary new-btn' %>
    </div>
    
    <div class="row">
      <% @researches.each do |research| %>
        <div class="col-md-6">
          <!--result window-->
          <%= gchart_window({object: research, window_type: (research.is_confirmed? ? :home : :info), data_method: research[:results], chart_type: :pie, window_title: research.label}, {title: "Datos Globales de la percepcion de clima organizacional"}) %>
          <!--result window-->
        </div>
      <% end %>
    </div>
  </div>
</div>
