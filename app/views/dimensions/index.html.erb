<%- model_class = Dimension -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
  <%= link_to "Nueva Dimension",new_dimension_path, :class => 'btn btn-primary new-btn' %>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:is_default) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @dimensions.each do |dimension| %>
      <tr>
        <td><%= link_to dimension.id, dimension_path(dimension) %></td>
        <td><%= dimension.name %></td>
        <td><%= dimension.is_default %></td>
        <td><%=l dimension.created_at %></td>
        <td class = "action-links">
          <%= link_to edit_dimension_path(dimension), title:"Editar" do %>
            <span class = "glyphicon glyphicon-edit"></span>
          <% end %>
          <%= link_to dimension_path(dimension),:method => :delete,:data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, title:"Eliminar"  do %>
            <span class = "glyphicon glyphicon-trash"></span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
