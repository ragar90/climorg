<%- model_class = Organization -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
  <%= link_to "Nueva OrgranizaciÃ³n",new_organization_path, :class => 'btn btn-primary new-btn' %>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:country) %></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @organizations.each do |organization| %>
      <tr>
        <td><%= organization.name.titleize %></td>
        <td><%= organization.country.name %></td>
        <td class = "action-links">
          <%= link_to edit_organization_path(organization), title:"Editar" do %>
            <span class = "glyphicon glyphicon-edit"></span>
          <% end %>
          <%= link_to organization_path(organization),:method => :delete,:data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, title:"Eliminar"  do %>
            <span class = "glyphicon glyphicon-trash"></span>
          <% end %>
          <%= link_to researches_path, title:"Estudios" do %>
            <span class = "fa fa-book"></span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>