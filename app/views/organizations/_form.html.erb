<%content_for :error_messages do  %> 
  <%= error_messages! @organization%>
<%end%>
<%= form_for @organization, :html => { :class => "form-horizontal"} do |f| %>
  <div class="form-group">
    <%= f.label :name, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :country_id, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.collection_select :country_id, @countries, :id, :name, {}, class: "form-control" %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),organizations_path, :class => 'btn btn-danger' %>
  </div>

<% end %>
